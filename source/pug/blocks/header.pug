mixin menu(items)
  ul.menu
    each item in items
      li
        a.menu__item(
          class=currentPageHref===item.href ? "menu__item--active" : null
          href=currentPageHref===item.href ? null : item.href
        ) #{item.name}

header.header
  nav.nav
    a.nav__logo(href=mainPage ? null : site.index.href) CAT ENERGY Logo
      img(src=`${dirs.images}logo.png` alt='' width='' height='')

    +menu([
      {href: 'index.html', name: 'Главная'},
      {href: 'catalog.html', name: 'Каталог продукции'},
      {href: 'form.html', name: 'Подбор программы'}
    ])
