mixin selection-text(text)
  li
    label.selection__label-text= text
      input&attributes(attributes)

mixin selection-radio(text)
  li
    label.selection__radio.radio
      input.radio__input&attributes(attributes)
      span.radio__text= text

mixin selection-checkbox(text)
  li
    label.selection__checkbox.checkbox
      input.checkbox__input&attributes(attributes)
      span.checkbox__text= text

section.selection
  h2.selection__title.heading-big #{site.form.title}
  p.selection__desc Заполните анкету, и мы подберем программу питания для вашего кота

  form(method='post' action='https://echo.htmlacademy.ru')

    fieldset.selection__fieldset

      ul.selection__list
        +selection-text('Имя:*')(name='name' value='Барсик' type='text' required)
        +selection-text('Вес (кг):*')(name='weight' value='7' type='number' min='0' required)
        +selection-text('Возраст (лет):')(name='age' value='7' type='number' min='0')

      ul.selection__list
        +selection-radio('Похудение')(name='purpose' value='weight-loss' type='radio' checked)
        +selection-radio('Набор массы')(name='purpose' value='weight-gain' type='radio')
        +selection-radio('Не знаю (Нужен ваш совет)')(name='purpose' value='dont-know' type='radio')

    fieldset.selection__fieldset.heading-middle Контактные данные (владельца кота)
      ul.selection__list
        +selection-text('E-mail:*')(name='email' value='kuklachev@gmail.com' type='email' required)
        +selection-text('Телефон:*')(name='tel' value='8 (960) 900-60-90' type='tel' required)

    fieldset.selection__fieldset.heading-middle Комментарий
      textarea.selection__comment(name='comment' placeholder='Расскажите обо всех повадках кота')

    fieldset.selection__fieldset.heading-middle Дополнительно
      ul.selection__list
        +selection-checkbox('Сахарозаменитель')(name='sugar-substitute' type='checkbox' checked)
        +selection-checkbox('Питьевая вода')(name='drinking-water' type='checkbox')
        +selection-checkbox('Молоко')(name='milk' type='checkbox')
        +selection-checkbox('Витамины')(name='vitamins' type='checkbox')

    button.selection__submit(type='submit') Отправить заявку
    p.selection__required * — Обязательные поля
