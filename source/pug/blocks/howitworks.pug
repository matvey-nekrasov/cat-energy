-
  var items = [
    {
      modifier: "leaf",
      text: "Функциональное питание содержит только полезные питательные вещества."
    },
    {
      modifier: "powder",
      text: "Выпускается в виде порошка, который нужно лишь залить кипятком и готово."
    },
    {
      modifier: "dining",
      text: "Замените один-два приема обычной еды на наше функциональное питание."
    },
    {
      modifier: "clock",
      text: "Уже через месяц наслаждайтесь изменениями к лучшему вашего&nbsp;питомца!"
    }
  ]

mixin howitworks-item(modifier, text)
  li.howitworks__item(class=`howitworks__item--${modifier}`)
    p.howitworks__desc.paragraph #{text}

mixin howitworks-list(items)
  ul.howitworks__list
    - for (var i = 0; i < items.length; i++)
      li.howitworks__item(class=`howitworks__item--${items[i].modifier}`)
        p.howitworks__desc.paragraph!= items[i].text
        span.howitworks__index= i+1

section.howitworks
  .container
    h2.howitworks__title.heading-big Как это работает
    +howitworks-list(items)
